<%- include('partials/header') -%>
<div class="container">
  <div class="row mt-5">
      <div class="col-6">
          <div>
              <p><strong>User Name</strong>: <%= user.userName %></p>
              <p><strong>Email</strong>: <%= user.email %></p>
             
          </div>
          <div class="mt-5">
            <h2>Add an Event</h2>
            <form action="/post/createPost" enctype="multipart/form-data" method="POST">
              <div class="mb-3">
                  <label for="title" class="form-label">Event Name and Year</label>
                  <input type="text" class="form-control" id="title" name="title">
              </div>
              <div class="mb-3">
                  <label for="location" class="form-label">Location</label>
                  <input type="text" class="form-control" id="location" name="location">
              </div>
              <div class="mb-3">
                <label for="caption" class="form-label">Favorite Memory</label>
                <textarea class="form-control" id="caption" name="caption"></textarea>
              </div>
              <div class="mb-3">
                <label for="imgUpload" class="form-label">Image</label>
                <input type="file" class="form-control" id="imageUpload" name="file">
              </div>
              <button type="submit" class="btn btn-primary" style="background-color: #5e60ce;" value="Upload">Submit</button>
            </form>
            
          </div>
      </div>
      <div class="col-6">
        <h2>My Events</h2>
        <ul class="row list-unstyled">
        <% for(var i=0; i<posts.length; i++) {%>
          <li class="col-6 justify-content-between mt-5">
            <a href="/post/<%= posts[i]._id%>">
              <p><%= posts[i].title%></p>
              <img class="img-fluid rounded" src="<%= posts[i].image%>">
            </a>
          </li>
        <% } %>
        </ul>
        <div class="row justify-content-center mt-5">
          <a class="btn btn-primary" style="background-color: #5e60ce;" href="/feed">Return to Memory Box</a>
        </div> 

      </div>  
    </div>
  </div>
</div>
<%- include('partials/footer') -%>